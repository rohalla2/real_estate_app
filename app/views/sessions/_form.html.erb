<%= form_tag '/login', class: "form-inline pull-right", role: "form"  do %>
  <div class="form-group">  
    <%= label_tag :email, 'Email:', class: "sr-only" %>
    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Enter your email" %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password:', class: "sr-only" %>
    <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
  </div>
  
  <%= submit_tag "Login", class: "btn btn-default" %>
      
  </div>
  <% end %>