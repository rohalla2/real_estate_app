<h2>Message Info</h2>
<p>
  <strong>Title:</strong>
  <%= @message.title %>
</p>

<p>
  <strong>Message type:</strong>
  <%= @message.message_type %>
</p>

<p>
  <strong>From:</strong>
  <%= @message.user.first_name %> <%= @message.user.last_name %>
</p>

<p>
	<strong>To:</strong>
	<ul>
		<% @message.users_to.each do |u| %>
		<li><%= u.first_name %> <%= u.last_name %></li>
		<% end %>
	</ul>
</p>

<p>
  <strong>Message:</strong>
  <%= @message.message %>
</p>



<%= link_to 'Back', messages_path, class: "btn btn-primary" %>
