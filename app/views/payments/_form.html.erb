<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>

  <div class="form-inline">
    <div class="field form-group form_padding">
      <%= f.label :bank_routing_number %><br>
      <%= f.text_field :bank_routing_number %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :bank_account_number %><br>
      <%= f.text_field :bank_account_number %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :account_type %><br>
      <%= f.select :account_type, Payment::ACCOUNT_TYPES, prompt: "What kind of account is it?" %>
    </div>
  </div>


  <div class="field">
    <input type="hidden" value="<%= @property_id %>" name="property_id" id="property_id">
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
