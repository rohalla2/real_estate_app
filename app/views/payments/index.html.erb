<h1>Listing payments</h1>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Tenant Name</th>
      <th>Property Owner</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr class="clickableRow" href= "<%= payment_path(payment) %>">
        <td><%= payment.updated_at %></td>
        <td><%= payment.user.first_name + " " + payment.user.last_name%></td>
        <td><%= payment.property.user.first_name + " " + payment.property.user.last_name %></td>
        <td><%= number_to_currency(payment.amount) %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script>
$(document).ready(function($) {
      $(".clickableRow").click(function() {
            window.document.location = $(this).attr("href");
      });
});
</script>