
<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form_padding ">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field form_padding" >
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="form-inline">
    <div class="field form-group form_padding">
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </div>
    <div class="field form-group form_padding"> 
      <%= f.label :date_available %><br>      
      <%= f.date_field :date_available %>
    </div>
  </div>

  <div class="form-inline">
    <div class="field form-group form_padding"> 
      <%= f.label :beds %><br>      
      <%= f.number_field :beds %>
    </div>
    <div class="field form-group form_padding ">
      <%= f.label :baths %><br>
      <%= f.text_field :baths %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :square_feet %><br>
      <%= f.number_field :square_feet %>
    </div>
  </div>

  <div class="form-inline">
    <div class="field form-group form_padding">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :state %><br>
      <%= f.text_field :state %>
    </div>
    <div class="field form-group form_padding">
      <%= f.label :zip_code %><br>
      <%= f.text_field :zip_code %>
    </div>
  </div>

  <div class="form-inline">
    <div class="field form-group form_padding text-center">
      <%= f.label :has_laundry %><br>
      <%= f.check_box :has_laundry %>
    </div>
    <div class="field form-group form_padding text-center">
      <%= f.label :has_parking %><br>
      <%= f.check_box :has_parking %>
    </div>
    <div class="field form-group form_padding text-center">
      <%= f.label :is_available %><br>
      <%= f.check_box :is_available %>
    </div>
  </div>

  <div class="field form_padding">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

