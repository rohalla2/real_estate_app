<!DOCTYPE html>
<html>
<head>
  <title>Chicago Real Estate</title>
  <%= favicon_link_tag "house_icon.ico" %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!-- Individual CSS Tags -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootswatch/3.0.3/slate/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link href="http://getbootstrap.com/examples/carousel/carousel.css" rel="stylesheet">

  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
  <script src="http://getbootstrap.com/assets/js/docs.min.js"></script>
</head>
<body>
  
    <div class="navbar navbar-default">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Chicago Real Estate</a>
      </div>
    <ul class="nav navbar-nav">
      <li><a href="/properties">Properties</a></li>
      <li><%= link_to "Information", "/information" %></li>
      <% if @user %>
        <li><%= link_to "Messages", messages_path %></li>
        <li><%= link_to "Payments", payments_path %></li>
        <li><%= link_to "Applications", applications_path %></li>
      
      <% end %>
    </ul>
      <% if @user.nil? || @user.new_record? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign Up", new_user_path %></li>
        </ul>
        <div class="navbar-form navbar-right">
          <%= render 'sessions/form' %>
        </div>

      <% else %>
        <%= button_to 'Logout', logout_path, class: "btn btn-danger pull-right", method: :delete %>
        <%= link_to 'Your Profile', user_path(@user), class: "btn btn-success pull-right" %>
      <% end %>    
  </div>
    
<div class="container">
    <% if @user %>
      <p class="lead">
        <%= "Welcome, #{@user.first_name}" %>
      </p>
    <% end %>

    <% if notice.present? %>
      <div class="alert alert-dismissable alert-warning">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= notice %>
      </div>
    <% end %>

  <%= yield %>
</div>

</body>
</html>